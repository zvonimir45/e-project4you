<% provide(:title, "Projects List") %>
<div class="container-fluid" id="main">
<div class="row">
  <p id="notice"><%= notice %></p>
  
  <h1>Projects</h1>

  <%= link_to 'New Project', new_project_path,  type: "button",
  class: "btn btn-xs", style: "margin: 0 0 10px 10px;" %>

  <div class="table-responsive">
    <table class="table table-bordered table-responsive">
      <thead>
        <tr>
          <th>No</th>
          <th>Name</th>
          <th>Started at</th>
          <th>Started in</th>
<!--          <th>Summary</th>  -->
          <th>Phase</th>
          <th>Kind</th>
          <th>Category</th>
          <th>Ceo</th>
          <th>Staff</th>
          <th>Investor</th>
          <th>Budget</th>
          <th>Deadline</th>
          <th>Annex url</th>
          <th>No</th>
          <th colspan="3">Action</th>
        </tr>
      </thead>
    
      <tbody>
        <% @projects.each do |project| %>
          <tr>
            <td><%= project.id %></td>
            <td><%= project.name %></td>
            <td><%= project.started_at %></td>
            <td><%= project.started_in %></td>
<!--            <td><%#= project.summary %></td> -->
            <td><%= project.phase %></td>
            <td><%= project.kind %></td>
            <td><%= project.category %></td>
            <td><%= project.ceo %></td>
            <td><%= project.staff %></td>
            <td><%= project.investor %></td>
            <td><%= project.budget %></td>
            <td><%= project.deadline %></td>
            <td><%= project.annex_url %></td>
            <td><%= project.id %></td>
            <td><%= link_to 'Show', project %></td>
            <td><%= link_to 'Edit', edit_project_path(project) %></td>
            <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div> <!-- class="table-responsive" --> 

  <%= link_to 'New Project', new_project_path,  type: "button",
  class: "btn btn-xs", style: "margin: 10px 0 20px 10px;" %>

</div>  <!-- row -->
</div> <!-- container-fluid -->
