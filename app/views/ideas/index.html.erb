<% provide(:title, "Ideas List") %>
<div class="container-fluid" id="main">
<div class="row">
  <p id="notice"><%= notice %></p>
  
  <h1>Ideas</h1>

  <%= link_to 'New Idea', new_idea_path,  type: "button",
  class: "btn btn-xs", style: "margin: 0 0 10px 10px;" %>

  <div class="table-responsive">
    <table class="table table-bordered table-responsive">
      <thead>
        <tr>
          <th>No</th>
          <th>Name</th>
          <th>Summary</th>
          <th>Kind</th>
          <th>Category</th>
          <th>Phase</th>
          <th>Inventor</th>
          <th>Invented</th>
          <th>Necessary budget</th>
          <th>Annex url</th>
          <th>No</th>
          <th colspan="3">Action</th>
        </tr>
      </thead>

      <tbody>
        <% @ideas.each do |idea| %>
          <tr>
            <td><%= idea.id %></td>
            <td><%= idea.name %></td>
            <td><%= idea.summary %></td>
            <td><%= idea.kind %></td>
            <td><%= idea.category %></td>
            <td><%= idea.phase %></td>
            <td><%= idea.inventor %></td>
            <td><%= idea.invented %></td>
            <td><%= idea.necessary_budget %></td>
            <td><%= idea.annex_url %></td>
            <td><%= idea.id %></td>
            <td><%= link_to 'Show', idea %></td>
            <td><%= link_to 'Edit', edit_idea_path(idea) %></td>
            <td><%= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div> <!-- class="table-responsive" --> 

  <%= link_to 'New Idea', new_idea_path,  type: "button",
  class: "btn btn-xs", style: "margin: 0 0 20px 10px;" %>

</div>  <!-- row -->
</div> <!-- container-fluid -->
