<% provide(:title, "Reports List") %>
<div class="container-fluid" id="main">
<div class="row">

  <h1>Reports</h1>

  <%= link_to 'New Report', new_report_path,  type: "button",
  class: "btn btn-xs", style: "margin: 0 0 10px 10px;" %>

  <div class="table-responsive">
    <table class="table table-bordered table-responsive">
      <thead>
      <tr>
        <th>No</th>
        <th>Name</th>
        <th>Author</th>
        <th>Category</th>
        <th>Level</th>
        <th>Summary</th>
        <th>Keywords</th>
        <th>Full text url</th>
        <th>Published</th>
        <th>Author detais url</th>
        <th>No</th>
        <th colspan="3">Action</th>
      </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.id %></td>
        <td><%= report.name %></td>
        <td><%= report.author %></td>
        <td><%= report.category %></td>
        <td><%= report.level %></td>
        <td><%#= report.summary %></td>
        <td><%= report.keywords %></td>
        <td><%= report.full_text_url %></td>
        <td><%= report.published %></td>
        <td><%= report.author_detais_url %></td>
        <td><%= report.id %></td>
        <td><%= link_to 'Show', report %></td>
        <td><%= link_to 'Edit', edit_report_path(report) %></td>
        <td><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  </div> <!-- class="table-responsive" --> 

  <%= link_to 'New Report', new_report_path,  type: "button",
  class: "btn btn-xs", style: "margin: 0 0 20px 10px;" %>

</div>  <!-- row -->
</div> <!-- container-fluid -->
