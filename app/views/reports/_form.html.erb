<%= form_with(model: report, local: true) do |form| %>
  <% if report.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(report.errors.count, "error") %> prohibited this report from being saved:</h2>

      <ul>
      <% report.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :report_name %>
    <%= form.label :author %>
    <%= form.text_field :author, id: :report_author %>
  </div>

  <div class="field">
    <%= form.label :category %>
    <%= form.select :category, (["News", "Comments", "Experience", "QandA"]), id: :post_category %>
    <%= form.label :level %>
    <%= form.select :level, (["Science", "Engineering", "Marketing", "Use"]), id: :post_level %>
  </div>

  <div class="field">
    <%= form.label :summary %><br />
    <%= form.text_area :summary, cols: "60", rows: "15", id: :post_summary %>
  </div>

  <div class="field">
    <%= form.label :keywords %>
    <%= form.text_field :keywords, id: :report_keywords %>
    <%= form.label :full_text_url %>
    <%= form.text_field :full_text_url, id: :report_full_text_url %>
  </div>

  <div class="field">
    <%= form.label :author_detais_url %>
    <%= form.text_field :author_detais_url, id: :report_author_detais_url %>
    <%= form.label :published %>
    <%= form.date_select :published, id: :report_published %>
  </div>

  <div class="actions">
    <%= form.submit "Submit", class: "btn btn-defaut" %>
  </div>
<% end %>
